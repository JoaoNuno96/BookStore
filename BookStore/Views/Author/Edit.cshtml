@model BookStore.Models.Entities.Author;
@{
    ViewData["title"] = $"Autor#{Model.Id} -  Edit"; 
}
<h1>@ViewData["title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <label asp-for="@Model.Name" class="control-label"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>

            <label asp-for="@Model.BirthDay" class="control-label"></label>
            <input asp-for="@Model.BirthDay" class="form-control" />
            <span asp-validation-for="@Model.BirthDay" class="text-danger"></span>

            <label asp-for="@Model.Nationality" class="control-label"></label>
            <input asp-for="@Model.Nationality" class="form-control" />
            <span asp-validation-for="@Model.Nationality" class="text-danger" ></span>

            <label asp-for="@Model.Image" class="control-label"> </label>
            <input asp-for="@Model.Image" class="form-control" />
            
            <br />
            <input type="submit" value="Save" class="btn btn-info" />

        </form>
    </div>
    <div class="col-md-8">
        <img src="@Model.Image" alt=$"Author{@Model.Id}" />
    </div>


</div>
